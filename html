<body>
    <h1>Task Manager</h1>
    <input type="month" id="monthPicker" />
    <div id="calendar"></div>
    <ul id="task-list">
        <li class="task">
            <input class="task-name" type="text" value="Task 1" />
            <input type="date" value="2023-05-13" />
        </li>
        <li class="task">
            <input class="task-name" type="text" value="Task 2" />
            <input type="date" value="2023-05-14" />
